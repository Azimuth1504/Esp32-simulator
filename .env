# ================== CẤU HÌNH CHUNG ==================

# Cổng chạy simulator (nội bộ giả lập thiết bị ESP32)
PORT=4000

# Cho phép điều khiển từ domain nào
# * = cho phép tất cả (chỉ dùng cho DEV, không nên dùng khi deploy)
ALLOWED_ORIGINS=*

# ================== THAM SỐ CẢM BIẾN ==================

# Dải giá trị cảm biến nhiệt độ (°C)
TEMP_MIN=20
TEMP_MAX=35

# Dải giá trị cảm biến độ ẩm (%)
HUM_MIN=40
HUM_MAX=80

# ================== SINH DỮ LIỆU BIG DATA ==================

# Big data: số bản ghi mỗi giây
# 100 ≈ 360.000 bản/giờ cho 1 thiết bị
SENSOR_RATE_PER_SECOND=100

# Nếu muốn bỏ chế độ theo records/second, đặt SENSOR_RATE_PER_SECOND=0
# khi đó simulator sẽ dùng TEMP_INTERVAL (ms) bên dưới làm chu kỳ sinh dữ liệu
TEMP_INTERVAL=5000

# Số lượng bản ghi lịch sử simulator giữ trong RAM để xem nhanh
# (KHÔNG lưu DB, DB sẽ xử lý ở server quản lý)
HISTORY_MAX_LENGTH=1000

# ================== GỬI DỮ LIỆU LÊN SERVER CHÍNH ==================

# Có gửi data sang server quản lý hay không (true/false)
# Khi chưa có server điều khiển thì để false cho nhẹ
SEND_TO_MAIN_SERVER=false

# Đường dẫn server quản lý
# Ví dụ khi bật: MAIN_SERVER_URL=http://localhost:3000
MAIN_SERVER_URL=

# ================== MÃ HÓA DỮ LIỆU ==================

# Key dùng cho AES/DES
DATA_SECRET=165743

# Lựa chọn thuật toán mã hóa: AES | DES
ENC_ALGO=AES

# ================== CẬP NHẬT UI & SỨC KHOẺ DỮ LIỆU ==================

# UI chỉ cập nhật giá trị hiển thị 5 giây 1 lần
UI_UPDATE_INTERVAL_MS=5000

# (Tuỳ chọn) tối đa bao lâu dữ liệu vẫn được coi là "tươi"
# Nếu để trống, server.js sẽ tự dùng = tempInterval * 2
# DATA_HEALTH_MAX_AGE_MS=2000
